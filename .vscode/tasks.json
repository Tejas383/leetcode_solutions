{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: g++-15 build active file",
      "type": "shell",
      "command": "/opt/homebrew/bin/g++-15",
      "args": [
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      },
      "detail": "Build C++ file with g++-15 and debug symbols"
    },
    {
      "label": "C/C++: delete build file",
      "type": "shell",
      "command": "sleep 1; rm \"${fileDirname}/${fileBasenameNoExtension}\"; if [ -d \"${fileDirname}/${fileBasenameNoExtension}.dSYM\" ]; then rm -rf \"${fileDirname}/${fileBasenameNoExtension}.dSYM\"; fi",
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "detail": "Delete build artifacts after debugging"
    }
  ]
}